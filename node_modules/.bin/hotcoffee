case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../hotnode/javascript/hotcoffee.js" "$@"
  ret=$?
else 
  node  "$basedir/../hotnode/javascript/hotcoffee.js" "$@"
  ret=$?
fi
exit $ret

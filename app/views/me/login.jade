extends ../layout.jade 
block contenido
	.row
		.section.light-green.darken-2
			.container
				.row
					.col.s12.l6
						.card.hoverable
							.card-panel.light-green
									span.card-title.white-text Iniciar sesion
									p.white-text inicia sesion para administar tus cursos y modificar tu informacion
							.card-content
								form#formLoginAdmin(method="POST", action="/me/login")
									.row
										.input-field.col.s12
											input#cc.validate(type="text" name="cc")
											label(for="cc") Documento de Identificacion
									.row
										.input-field.col.s12
											input#ps.validate(type="password" name="ps")
											label(for="ps") Contrase√±a
									.row
										.cb.col.s12
											input#rmr(type="checkbox")
											label(for="rmr") Recordar
									.row.right-align
										button.btn.waves-effect.waves-light.blue.accent-2(type="submit") Iniciar sesion
											i.material-icons.right send
									span
											p.red-text #{message}

							.card-action
								a.grey-text.text-darken-1(href="/me/signup") Registrarse







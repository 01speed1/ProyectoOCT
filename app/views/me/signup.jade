extends ../layout.jade 
block contenido
	.row
		.section.light-green.darken-2
			.container
				.row
					.col.s12.l6
						.card.hoverable
							.card-panel.light-green
									span.card-title.white-text Registrarse
									p.white-text Registrate en la plataforma de Oficina de Cultura Regreacion y deportes para gestionar tus escuelas de formacion
							.card-content
								form#formLoginAdmin(method="POST", action="/me/signup")
									.row
										.input-field.col.s12
											input#cc.validate(type="text" name="cc")
											label(for="cc") Documento de Identificacion
									.row
										.input-field.col.s12
											input#ps.validate(type="password" name="ps")
											label(for="ps") Contraseña
									.row
										.input-field.col.s12
											input#pc.validate(type="password" name="pc")
											label(for="pc") Confirmar constraseña
									.row.right-align
										button.btn.waves-effect.waves-light.blue.accent-2(type="submit") Registrarse
											i.material-icons.right send
									span
											p #{massage}

							.card-action
								a.grey-text.text-darken-1(href="/me/login") Ya tengo cuenta







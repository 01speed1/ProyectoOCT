extends ../../layout
block contenido
	header
		include ../Ext/menu-lateral-admin.jade
	main
		include ../Ext/page-title.jade
		.container
			p.descripcion Aquí puedes agregar un nuevo Grupo
			//formulario
			.row
				.card-panel.km
					form#nueva-grupo.col.s12(
						method="POST"
						action="/admin/grupos/nuevo"
						enctype="multipart/form-data")
						.row
							.input-field.col.s6
								i.material-icons.prefix.grey-icons library_books
								label.active(for="jornada") Jornada
								select#jornada(
								name="jornada"
								data-error=".errorTxt1")
									option(value="Mañana") Mañana
									option(value="Tarde") Tarde
									option(value="Noche") Noche
								.errorTxt1
							.input-field.col.s6
								i.material-icons.prefix.grey-icons library_books
								label.active(for="area") area 
								select#area(
									name="area")
									each area in areas
										option(
											value="#{area.id}") #{area.nombre} - #{area.escuela.nombre}
						.row
							.input-field.col.s3
								i.material-icons.prefix.grey-icons date_range
								input#fechaInicio.dateGroupStart(
									name="fechaInicio"
									type="date"
									data-error=".errorTxt3")
								label.active(for="fechaInicio") Fecha de Incio de las clases
								.errorTxt3
							.input-field.col.s3
								input#fechaFin.dateGroupEnd(
									name="fechaFin"
									type="date"
									data-error=".errorTxt4")
								label.active(for="fechaFin") Fecha de Fin de clases
								.errorTxt4
							.input-field.col.s6
								label.active(for="DiasDeClase") Dias de clase
								select#DiasDeClase.initialized(multiple="")
									option(value="" disabled selected) Selecciona los dias de clase
									option(value="Lunes") Lunes
									option(value="Martes") Martes
									option(value="Miércoles") Miercoles
									option(value="Jueves") Jueves
									option(value="Viernes") Viernes
									option(value="Sábado") Sábado
									option(value="Domingo") Domingo
						.row
							.col.s6
								label Hora de inicio de las clases
								.row
									.col.s4
										.input-field.col.s12
											select#horaInicio(
											name="horaInicio")
												-for (var i = 1; i < 13; i++) {
													option(
														value="#{i}") #{i}
												-}
									.col.s4
										.input-field.col.s12
											select#horaInicioMin(
											name="horaInicio")
												-for (var i = 0; i < 60; i++) {
													if i<=9
														option(value='#{i}') 0#{i}
													else
														option(value='#{i}') #{i}
												-}
									.col.s4
										.input-field.col.s12
											select#AMPMInicio(
											name="AMPMInicio")
												option(value='AM') A.M.
												option(value='PM') P.M.
							.col.s6
								label Hora fin de las clases
								.row
									.col.s4
										.input-field.col.s12
											select#horaFin(
											name="horaFin")
												-for (var i = 1; i < 13; i++) {
													option(
														value="#{i}") #{i}
												-}
									.col.s4
										.input-field.col.s12
											select#horaFinMin(
											name="horaFinMin")
												-for (var i = 0; i < 60; i++) {
													if i<=9
														option(value='#{i}') 0#{i}
													else
														option(value='#{i}') #{i}
												-}
									.col.s4
										.input-field.col.s12
											select(
											name="AMPMFin")
												option(value='AM') A.M.
												option(value='pM') P.M.

						.row
							.input-field.col.s10
								input#nombre(
								name="nombre"
								type="text"
								placeholder="Nombre del grupo, se genera automaticamente"
								disabled)
								label#nameGrupLabel.active(for="nombre") Nombre del grupo
							.input-field.col.s2
								input#activeName(type="checkbox")
								label(for="activeName") Editar nombre

							


						.divider
						.row
							.col.s12.center-align
								a.waves-effect.waves-light.btn.sbt.white.grey-icons(
									href="/admin/areas") regresar
									i.material-icons.left close
								button.waves-effect.waves-light.btn.sbt.cyan.creando(
								type="submit"
								name="estado"
								value="NUEVO") Guardar
									i.material-icons.right save

					//row killer card panel 
					.row.km
block footer

extends ../../layout
block contenido
	header
		include ../Ext/menu-lateral-admin.jade
	main
		include ../Ext/page-title.jade
		.container
			a.waves-effet.waves-light.btn.cyan.sbt(
				href="/admin/administradores/nuevo") Nuevo
			ul.collection
				each admin in admins
					.elemento
						.info
							li.collection-item.avatar
								span.new.badge.cyan
								img.circle(src="#{admin.avatar}")
								span.title #{admin.nombres} #{admin.apellidos}
								p.grey-icons #{admin.nombreUsuario}
									br
									|  #{admin.email}
						.mas-info
							.divider
							.row.km
								.col.s3
									p.key Edad
									p.grey-icons.km #{admin.edad}
								.col.s3
									p.key Fecha de Nacimiento
									p.grey-icons.km #{admin.fechaPretty}
								.col.s3
									p.key Género
									if admin.genero == "H"
										p.grey-icons.km Hombre
									else
										p.grey-icons.km Mujer 
								.col.s3
									p.key Ultima modificación
									if admin.fechaModificado == null
										p.grey-icons.km No se ha modificado	
							.divider
							a.btn.sbt.cyan ver perfil
							a.btn.sbt.cyan modificar
							a.btn.sbt.cyan eliminar





block footer